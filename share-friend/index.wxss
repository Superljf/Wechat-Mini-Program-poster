/* pages/share-friend/index.wxss */

.share-friend-page {
  min-height: 100vh;
  background: #FAFAFA;
  position: relative;
  overflow: hidden;
  background: linear-gradient(180deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 0px 0px 0px 0px;
}



/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0px;
  left: 0;
  right: 0;
  height: 715px;
  pointer-events: none;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
}

.bg-circle-1 {
  width: 200px;
  height: 200px;
  background: #FFF6EF;
  top: 131px;
  right: 1px;
}

.bg-circle-2 {
  width: 167px;
  height: 167px;
  background: #FFEFEF;
  top: 120px;
  left: 0;
}

/* 提示文字 */
.tip-text {
  position: absolute;
  top: 5vh;
  left: 50%;
  transform: translateX(-50%);
  font-size: 16px;
  color: #000000;
  text-align: center;
  z-index: 10;
  word-break: keep-all;
  width: 100%;
}

/* 海报展示区域 */
.poster-container {
  position: absolute;
  top: 10vh;
  left: 50%;
  transform: translateX(-50%);
  width: 282px;
  height: 524px;
  z-index: 20;
  border-radius: 16rpx;
}

/* Canvas画布（隐藏） */
.poster-canvas {
  position: absolute;
  top: -9999px;
  left: -9999px;
  opacity: 0;
  pointer-events: none;
}

.old-canvas {
  z-index: -1;
}

/* 海报预览 */
.poster-preview {
  width: 100%;
  height: 100%;
  overflow: hidden;
  /* box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.05);
  background: #FFFFFF; */
}


.poster-image {
  width: 100%;
  height: 100%;
  /* border-radius: 20px; */
  display: block;
}

/* 加载状态 */
.poster-loading {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border-radius: 10px;
  box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.05);
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #FF4E4E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 16px;
  font-size: 14px;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-dots {
  display: inline-flex;
  align-items: center;
}

.dot {
  display: inline-block;
  animation: loadingDots 1.5s infinite;
  opacity: 0;
}

.dot1 {
  animation-delay: 0s;
}

.dot2 {
  animation-delay: 0.3s;
}

.dot3 {
  animation-delay: 0.6s;
}

@keyframes loadingDots {

  0%,
  80% {
    opacity: 0;
  }

  40% {
    opacity: 1;
  }
}

/* 分享选项 */
.share-options {
